rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to student photos
    match /students/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
